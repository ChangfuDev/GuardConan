<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:fitsSystemWindows="true"/>

    <ImageView
        android:src="@drawable/clean_cache_finish"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_clean_cache_finish"/>

    <TextView
        android:textColor="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/iv_clean_cache_finish"
        android:id="@+id/tv_demo"
        android:text="已清理垃圾文件"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:textColor="@color/gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_clean_cache_finish"/>




</RelativeLayout>
