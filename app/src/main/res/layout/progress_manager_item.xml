<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_progress_manager"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_item_progress_manager_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_item_progress_manager"
        android:text="手机安全卫士"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_item_progress_manager_memory"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:text="占用内存XXX"
        android:layout_toRightOf="@id/iv_item_progress_manager"
        android:layout_alignBottom="@id/iv_item_progress_manager"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_item_progress_manager"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
